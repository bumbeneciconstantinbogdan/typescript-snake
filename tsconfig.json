{
	"compilerOptions": {
		"declaration": false,
		"experimentalDecorators": true,
        "esModuleInterop": true,
		"lib": [
			"dom",
			"ES6",
		],
		"module": "umd",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"outDir": "_build/",
		"removeComments": false,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es6",

	},
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.ts",
		"./typings/index.d.ts"
	],
	"exclude": [
		"_build",
		"dist",
		"node_modules",
        "public"
	]
}